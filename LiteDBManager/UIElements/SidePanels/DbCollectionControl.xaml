<UserControl x:Name="dbcollectioncontrol" x:Class="LiteDBManager.UIElements.DbCollectionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LiteDBManager.UIElements"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="200" MouseUp="dbcollectioncontrol_MouseUp">
    <Border BorderBrush="Black" BorderThickness="0,0,0,1" Margin="0">
        <Grid Background="White">
            <TextBlock x:Name="tbkCollection" Margin="5,0,30,0" TextWrapping="Wrap" VerticalAlignment="Center"/>
            <Button x:Name="btnDelete" HorizontalAlignment="Left" Margin="172,0,0,0" VerticalAlignment="Center" BorderBrush="{x:Null}" Foreground="{x:Null}" Background="#00DDDDDD" Click="btnDelete_Click">
                <Image x:Name="image" Height="24" Width="24" Source="/LiteDBManager;component/Resources/icons8-remove-96.png" d:IsLocked="True"/>
            </Button>

        </Grid>
    </Border>
</UserControl>
