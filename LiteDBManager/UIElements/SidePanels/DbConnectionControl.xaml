<UserControl x:Class="LiteDBManager.UIElements.DbConnectionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LiteDBManager.UIElements"
             mc:Ignorable="d" 
             d:DesignHeight="110" d:DesignWidth="200" MinWidth="200" MinHeight="110" MouseUp="UserControl_MouseUp" Background="White">
    <Border BorderBrush="#FF010C57" BorderThickness="0,0,0,4">
        <Grid>
            <Label x:Name="label" Content="Archivo:" HorizontalAlignment="Left" Margin="5,5,0,0" VerticalAlignment="Top"/>
            <TextBlock x:Name="tbkFilename" Margin="63,10,5,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
            <Label x:Name="label1" Content="Estado:" HorizontalAlignment="Left" Margin="5,30,0,0" VerticalAlignment="Top"/>
            <TextBlock x:Name="tbkConnectionStatus" Margin="63,35,5,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
            <Button x:Name="btnChangeStatus" Content="Desconectar" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75"/>

        </Grid>
    </Border>
</UserControl>
